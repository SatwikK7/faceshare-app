# FaceShare Environment Variables - Example File
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# ============================================
# BACKEND CONFIGURATION (Spring Boot)
# ============================================

# Server
PORT=8080

# Database - PostgreSQL (Railway provides these automatically)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/faceshare
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_db_password_here
SPRING_DATASOURCE_DRIVER=org.postgresql.Driver

# Database - H2 (Local Development Only)
# Uncomment to use H2 instead of PostgreSQL for local testing
#SPRING_DATASOURCE_URL=jdbc:h2:file:./data/faceshare
#SPRING_DATASOURCE_USERNAME=sa
#SPRING_DATASOURCE_PASSWORD=password
#SPRING_DATASOURCE_DRIVER=org.h2.Driver
#H2_CONSOLE_ENABLED=true

# JWT Security
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_change_this_in_production_make_it_very_long_and_random

# Cloudinary (Image Storage)
# Get from: https://console.cloudinary.com/
# Format: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=cloudinary://123456789012345:abcdefghijklmnopqrstuvwxyz123@dxxxxxxxxxxxxx

# AI Service
# Development: http://localhost:5000
# Production Railway: http://ai-service.railway.internal:5000
AI_SERVICE_URL=http://localhost:5000

# CORS (Comma-separated list of allowed origins)
# Only needed if you have a custom frontend domain
CORS_ALLOWED_ORIGINS=https://faceshare.app,https://*.faceshare.app

# Logging
LOG_LEVEL=INFO

# ============================================
# AI SERVICE CONFIGURATION (Python/Flask)
# ============================================

# Server
HOST=0.0.0.0
PORT=5000
DEBUG=False

# Flask Environment
FLASK_ENV=production

# File Upload
UPLOAD_FOLDER=/tmp/faceshare/uploads
TEMP_FOLDER=/tmp/faceshare/temp
MAX_CONTENT_LENGTH=16777216

# Backend URL (if AI service needs to callback)
BACKEND_URL=http://localhost:8080

# ============================================
# FLUTTER APP CONFIGURATION
# ============================================

# API Base URL
# Set this when building the APK:
# flutter build apk --dart-define=API_BASE_URL=https://your-domain.up.railway.app
API_BASE_URL=http://192.168.1.100:8080

# ============================================
# RAILWAY.APP DEPLOYMENT
# ============================================

# Railway will provide these automatically for PostgreSQL:
# PGHOST=containers-us-west-xxx.railway.app
# PGPORT=6543
# PGDATABASE=railway
# PGUSER=postgres
# PGPASSWORD=auto_generated_password

# You only need to set these manually:
# - CLOUDINARY_URL
# - JWT_SECRET
# - AI_SERVICE_URL (after deploying AI service)
